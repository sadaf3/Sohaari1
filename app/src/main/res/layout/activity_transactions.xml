<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.sohaari.activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="Transactions"
        app:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/transactions_balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:padding="36dp"
        android:text="@string/transaction_details_never_checked"
        android:textSize="24dp" />

    <Button
        android:id="@+id/update_transactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:stateListAnimator="@null"
        android:text="@string/update"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:theme="@style/FlatButton" />
</RelativeLayout>
