<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.root.sohaari.activity.UpiPin">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="UPI PIN"
        app:titleTextColor="@android:color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/set_upi_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small">

            <ImageView
                android:layout_width="@dimen/image_height_medium"
                android:layout_height="@dimen/image_height_medium"
                android:background="@drawable/background_circle"
                android:backgroundTint="@color/drawable_back_light"
                android:clickable="true"
                android:padding="@dimen/image_padding"
                android:src="@drawable/ic_lock"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/list_padding_medium"
                android:text="Set/Forget UPI PIN"
                android:textSize="@dimen/list_text_size_medium" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/divider_margin_start"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/change_upi_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small">

            <ImageView
                android:layout_width="@dimen/image_height_medium"
                android:layout_height="@dimen/image_height_medium"
                android:background="@drawable/background_circle"
                android:backgroundTint="@color/drawable_back_light"
                android:clickable="true"
                android:padding="@dimen/image_padding"
                android:src="@drawable/ic_key"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/list_padding_medium"
                android:text="Change UPI PIN"
                android:textSize="@dimen/list_text_size_medium" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/divider_margin_start"
            android:background="@color/divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:text="@string/upi_pin_warning" />
    </LinearLayout>
</LinearLayout>
